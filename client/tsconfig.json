{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2018",
    "moduleResolution": "node",
    "lib": ["esnext", "esnext.asynciterable", "dom"],
    "esModuleInterop": true,
    "noEmit": true,
    "strict": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"]
    },
    "types": [
      "jest",
      "node",
      "@nuxt/http",
      "@nuxt/types",
      "@nuxtjs/i18n",
      "@nuxtjs/pwa"
    ]
  },
  "exclude": ["node_modules", ".nuxt", "dist"]
}
