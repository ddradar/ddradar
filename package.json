{
  "name": "ddradar",
  "version": "3.0.0",
  "description": "DDR Score Tracker",
  "repository": "https://github.com/ddradar/ddradar.git",
  "author": "Nogic <24802730+nogic1008@users.noreply.github.com>",
  "license": "MIT",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.12.1",
  "scripts": {
    "build": "nuxt build",
    "db:generate": "nuxt db generate",
    "db:query": "wrangler d1 execute DB",
    "deploy": "wrangler deploy",
    "dev": "nuxt dev",
    "fix": "pnpm run \"/^fix:.*/\"",
    "fix:eslint": "eslint --fix .",
    "fix:prettier": "prettier --write \"**/*.{json,jsonc,yml,js,mjs,ts,vue}\" --experimental-cli",
    "lint": "pnpm run \"/^lint:.*/\"",
    "lint:eslint": "eslint .",
    "lint:typecheck": "nuxt typecheck",
    "lint:prettier": "prettier -l \"**/*.{json,jsonc,yml,js,mjs,ts,vue}\" --experimental-cli",
    "prepare": "husky && nuxt prepare",
    "preview": "wrangler preview",
    "test": "vitest run"
  },
  "lint-staged": {
    "*.{js,mjs,ts,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,jsonc,yml}": "prettier --write"
  },
  "dependencies": {
    "@libsql/client": "^0.15.15",
    "@nuxt/ui": "^4.3.0",
    "@nuxthub/core": "^0.10.4",
    "drizzle-orm": "^0.45.1",
    "happy-dom": "^20.0.11",
    "iconv-lite": "^0.7.1",
    "nuxt": "^4.2.2",
    "nuxt-auth-utils": "0.5.26",
    "vue": "^3.5.25",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@nuxt/eslint": "^1.12.1",
    "@nuxt/test-utils": "^3.22.0",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/eslint-plugin": "^1.6.6",
    "@vue/test-utils": "^2.4.6",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16",
    "vue-tsc": "^3.1.6",
    "wrangler": "^4.54.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "esbuild",
      "sharp",
      "unrs-resolver",
      "workerd"
    ],
    "patchedDependencies": {
      "@nuxthub/core": "patches/@nuxthub__core.patch",
      "nitropack@2.12.9": "patches/nitropack@2.12.9.patch"
    }
  }
}
