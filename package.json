{
  "name": "ddradar",
  "version": "1.0.2",
  "description": "DDR Score Tracker",
  "repository": "https://github.com/ddradar/ddradar.git",
  "author": "Nogic <24802730+nogic1008@users.noreply.github.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "api",
    "client",
    "core",
    "db",
    "functions",
    "scripts"
  ],
  "scripts": {
    "build": "yarn workspaces run build",
    "fix": "run-p \"lint:eslint --fix\" \"lint:prettier --write\"",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint --ext .js,.ts,.vue --ignore-path .gitignore .",
    "lint:prettier": "prettier -l \"**/*.{json,yaml,yml,js,ts,vue}\"",
    "test": "yarn workspaces run test",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yaml,yml}": "prettier --write"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "npm-run-all2": "^5.0.2",
    "prettier": "^2.4.1"
  },
  "resolutions": {
    "@types/babel__core": "^7.0.0",
    "@types/connect": "^3.4.34",
    "@types/node": "^12.20.27",
    "@types/serve-static": "^1.13.9",
    "@types/webpack": "^4.41.30",
    "chokidar": "^3.5.1",
    "node-fetch": "^2.6.5"
  }
}
