{
  "name": "ddradar",
  "version": "1.0.0-rc.3",
  "description": "DDR Score Tracker",
  "repository": "https://github.com/ddradar/ddradar.git",
  "author": "Nogic <24802730+nogic1008@users.noreply.github.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "api",
    "client",
    "core",
    "db",
    "functions",
    "scripts"
  ],
  "scripts": {
    "prebuild": "run-p \"run:core {1}\" \"run:db {1}\" -- build",
    "build": "run-p \"run:api {1}\" \"run:client {1}\" \"run:func {1}\" -- build",
    "fix": "run-p fix:*",
    "fix:eslint": "run-s \"lint:eslint --fix\"",
    "fix:prettier": "run-s \"lint:prettier --write\"",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint --ext .js,.ts,.vue --ignore-path .gitignore .",
    "lint:prettier": "prettier -l \"**/*.{json,yaml,yml,js,ts,vue}\"",
    "test": "run-s \"run:* test\"",
    "run:api": "yarn workspace @ddradar/api",
    "run:client": "yarn workspace @ddradar/client",
    "run:core": "yarn workspace @ddradar/core",
    "run:db": "yarn workspace @ddradar/db",
    "run:func": "yarn workspace @ddradar/functions",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yaml,yml}": "prettier --write"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1"
  }
}
