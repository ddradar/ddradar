{
  "name": "ddradar",
  "version": "1.1.1",
  "description": "DDR Score Tracker",
  "repository": "https://github.com/ddradar/ddradar.git",
  "author": "Nogic <24802730+nogic1008@users.noreply.github.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "core",
    "db",
    "functions",
    "scripts",
    "web"
  ],
  "scripts": {
    "build": "yarn workspaces run build",
    "fix": "run-p \"lint:eslint --fix\" \"lint:prettier --write\"",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint --ext .js,.ts,.vue --ignore-path .gitignore .",
    "lint:prettier": "prettier -l \"**/*.{json,yaml,yml,js,ts,vue}\"",
    "test": "yarn workspaces run test",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yaml,yml}": "prettier --write"
  },
  "devDependencies": {
    "@azure/static-web-apps-cli": "^1.0.6",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "@vitest/coverage-c8": "^0.28.5",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-vitest": "^0.0.53",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "npm-run-all2": "^6.0.4",
    "prettier": "^2.8.4"
  }
}
