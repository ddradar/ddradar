{
  "name": "ddradar",
  "version": "2.0.0",
  "description": "DDR Score Tracker",
  "repository": "https://github.com/ddradar/ddradar.git",
  "author": "Nogic <24802730+nogic1008@users.noreply.github.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=16",
    "pnpm": "8.x"
  },
  "scripts": {
    "build": "pnpm -r --workspace-concurrency 1 build",
    "fix": "pnpm run \"/^fix:.*/\"",
    "fix:eslint": "pnpm lint:eslint --fix",
    "fix:prettier": "pnpm lint:prettier --write",
    "lint": "pnpm run \"/^lint:.*/\"",
    "lint:eslint": "eslint --ext .js,.ts,.vue --ignore-path .gitignore .",
    "lint:prettier": "prettier -l \"**/*.{json,yaml,yml,js,ts,vue}\"",
    "test": "pnpm -r test",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yaml,yml}": "prettier --write"
  },
  "devDependencies": {
    "@azure/static-web-apps-cli": "^1.1.3",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "@vitest/coverage-v8": "^0.32.2",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-vitest": "^0.2.6",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "npm-run-all2": "^6.0.5",
    "prettier": "^2.8.8"
  }
}
