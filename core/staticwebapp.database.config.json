{
  "$schema": "https://dataapibuilder.azureedge.net/schemas/v0.5.34/dab.draft.schema.json",
  "data-source": {
    "database-type": "cosmosdb_nosql",
    "options": {
      "database": "DDRadar",
      "schema": "staticwebapp.database.schema.gql"
    },
    "connection-string": "@env('COSMOS_DB_CONN')"
  },
  "runtime": {
    "graphql": {
      "allow-introspection": true,
      "enabled": true,
      "path": "/graphql"
    },
    "host": {
      "mode": "production",
      "cors": {
        "origins": ["*"],
        "allow-credentials": false
      },
      "authentication": {
        "provider": "StaticWebApps"
      }
    }
  },
  "entities": {
    "Song": {
      "source": "Songs",
      "permissions": [
        {
          "actions": ["read"],
          "role": "anonymous"
        },
        {
          "actions": ["*"],
          "role": "administrator"
        }
      ]
    },
    "Course": {
      "source": "Songs",
      "permissions": [
        {
          "actions": ["read"],
          "role": "anonymous"
        },
        {
          "actions": ["*"],
          "role": "administrator"
        }
      ]
    },
    "Notification": {
      "source": "Notification",
      "permissions": [
        {
          "actions": ["read"],
          "role": "anonymous"
        },
        {
          "actions": ["*"],
          "role": "administrator"
        }
      ]
    }
  }
}
