{
  "bindings": [
    {
      "type": "cosmosDBTrigger",
      "direction": "in",
      "name": "songs",
      "connection": "COSMOS_DB_CONN",
      "databaseName": "DDRadar",
      "containerName": "Songs",
      "leaseContainerPrefix": "updateSong",
      "createLeaseCollectionIfNotExists": true
    },
    {
      "name": "oldTotalCounts",
      "type": "cosmosDB",
      "direction": "in",
      "connection": "COSMOS_DB_CONN",
      "databaseName": "DDRadar",
      "containerName": "UserDetails",
      "sqlQuery": "SELECT c.id, c.playStyle, c.level FROM c WHERE c.userId = '0'"
    },
    {
      "name": "scores",
      "type": "cosmosDB",
      "direction": "out",
      "connection": "COSMOS_DB_CONN",
      "databaseName": "DDRadar",
      "containerName": "Scores"
    },
    {
      "name": "details",
      "type": "cosmosDB",
      "direction": "out",
      "connection": "COSMOS_DB_CONN",
      "databaseName": "DDRadar",
      "containerName": "UserDetails"
    }
  ],
  "scriptFile": "../dist/updateSongInfo/index.js"
}
