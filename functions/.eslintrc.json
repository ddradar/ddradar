{
  "root": true,
  "extends": ["../.eslintrc.json"],
  "settings": {
    "node": {
      "allowModules": ["@azure/functions", "@jest/types", "jest-fetch-mock"],
      "tryExtensions": [".ts", ".js", ".json", ".node"]
    }
  },
  "rules": {
    "import/no-unresolved": "off",
    "node/no-unpublished-import": "off"
  }
}
