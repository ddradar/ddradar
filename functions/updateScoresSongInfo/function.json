{
  "bindings": [
    {
      "type": "cosmosDBTrigger",
      "name": "songs",
      "direction": "in",
      "leaseCollectionPrefix": "updateSong",
      "connectionStringSetting": "COSMOS_DB_CONN",
      "databaseName": "DDRadar",
      "collectionName": "Songs",
      "createLeaseCollectionIfNotExists": true
    },
    {
      "name": "scores",
      "type": "cosmosDB",
      "direction": "in",
      "connectionStringSetting": "COSMOS_DB_CONN",
      "databaseName": "DDRadar",
      "collectionName": "Scores",
      "sqlQuery": "SELECT * FROM c WHERE c.songId = {songs[0].id}"
    },
    {
      "name": "$return",
      "type": "cosmosDB",
      "direction": "out",
      "connectionStringSetting": "COSMOS_DB_CONN",
      "databaseName": "DDRadar",
      "collectionName": "Scores"
    }
  ],
  "scriptFile": "../dist/updateScoresSongInfo/index.js"
}
