{
  "bindings": [
    {
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "authLevel": "anonymous",
      "methods": ["post"],
      "route": "v1/scores/{songId:regex(^[01689bdiloqDIOPQ]{{32}}$)}/{userId:regex(^[-a-zA-Z0-9_]+$)}"
    },
    {
      "name": "songs",
      "type": "cosmosDB",
      "direction": "in",
      "connection": "COSMOS_DB_CONN_READONLY",
      "databaseName": "DDRadar",
      "containerName": "Songs",
      "sqlQuery": "SELECT c.id, c.name, c.charts FROM c WHERE c.id = {songId} OR ({songId} = 'dll9D90dq1O09oObO66Pl8l9I9l0PbPP' AND c.id = '01lbO69qQiP691ll6DIiqPbIdd9O806o')"
    },
    {
      "name": "users",
      "type": "cosmosDB",
      "direction": "in",
      "connection": "COSMOS_DB_CONN",
      "databaseName": "DDRadar",
      "containerName": "Users",
      "sqlQuery": "SELECT * FROM c WHERE c.id = {userId}"
    },
    {
      "type": "http",
      "direction": "out",
      "name": "httpResponse"
    },
    {
      "type": "cosmosDB",
      "direction": "out",
      "name": "documents",
      "connection": "COSMOS_DB_CONN",
      "databaseName": "DDRadar",
      "containerName": "Scores"
    }
  ],
  "scriptFile": "../dist/postSongScores/index.js"
}
