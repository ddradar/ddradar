{
  "name": "@ddradar/functions",
  "version": "2.0.0",
  "description": "Backend functions for DDRadar",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "18.x"
  },
  "workspaces": {
    "nohoist": [
      "@azure/cosmos",
      "@azure/cosmos/**",
      "@ddradar/db",
      "@ddradar/core",
      "iconv-lite",
      "iconv-lite/**",
      "node-fetch-native",
      "node-fetch-native/**"
    ]
  },
  "scripts": {
    "build": "tsc",
    "prestart": "tsc",
    "start": "func start",
    "test": "vitest run"
  },
  "dependencies": {
    "@azure/cosmos": "^3.17.3",
    "@ddradar/db": "^2.0.0",
    "@ddradar/core": "^2.0.0",
    "iconv-lite": "^0.6.3",
    "node-fetch-native": "^1.0.2"
  },
  "devDependencies": {
    "@azure/functions": "^3.5.1",
    "@tsconfig/node18": "^1.0.1",
    "@types/node": "^18.15.11",
    "typescript": "^5.0.3",
    "vitest": "^0.29.7"
  }
}
