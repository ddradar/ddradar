{
  "name": "@ddradar/functions",
  "version": "2.0.0",
  "description": "Backend functions for DDRadar",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "18.x"
  },
  "main": "dist/functions/*.js",
  "workspaces": {
    "nohoist": [
      "@azure/cosmos",
      "@azure/cosmos/**",
      "@azure/functions",
      "@azure/functions/**",
      "@ddradar/db",
      "@ddradar/core",
      "iconv-lite",
      "iconv-lite/**",
      "node-fetch-native",
      "node-fetch-native/**"
    ]
  },
  "scripts": {
    "build": "tsc",
    "prestart": "tsc",
    "start": "func start",
    "test": "vitest run"
  },
  "dependencies": {
    "@azure/cosmos": "^4.0.0",
    "@azure/functions": "^4.4.0",
    "@ddradar/core": "workspace:*",
    "@ddradar/db": "workspace:*",
    "iconv-lite": "^0.6.3",
    "node-fetch-native": "^1.6.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@tsconfig/node18": "^18.2.4",
    "@types/node": "^18.17.11",
    "typescript": "^5.4.3",
    "vitest": "^1.4.0"
  }
}
