{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "API: Launch",
      "type": "func",
      "command": "host start",
      "problemMatcher": "$func-watch",
      "isBackground": true,
      "dependsOn": "API: Build",
      "options": {
        "cwd": "${workspaceFolder}/api"
      }
    },
    {
      "label": "API: Build",
      "type": "shell",
      "group": "build",
      "command": "yarn",
      "args": ["build"],
      "dependsOn": "API: Install Dependencies",
      "problemMatcher": "$tsc",
      "options": {
        "cwd": "${workspaceFolder}/api"
      }
    },
    {
      "label": "API: Install Dependencies (Production)",
      "type": "shell",
      "command": "yarn",
      "args": ["--production"],
      "options": {
        "cwd": "${workspaceFolder}/api"
      }
    },
    {
      "label": "API: Install Dependencies",
      "type": "shell",
      "command": "yarn",
      "options": {
        "cwd": "${workspaceFolder}/api"
      }
    },
    {
      "label": "Client: Launch",
      "type": "shell",
      "isBackground": true,
      "command": "yarn dev",
      "dependsOn": "Client: Install Dependencies",
      "options": {
        "cwd": "${workspaceFolder}/client"
      },
      "problemMatcher": {
        "owner": "nuxt",
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "yarn run.*",
          "endsPattern": ".*Waiting for file changes.*"
        }
      }
    },
    {
      "label": "Client: Install Dependencies",
      "type": "shell",
      "command": "yarn",
      "options": {
        "cwd": "${workspaceFolder}/client"
      }
    }
  ]
}
