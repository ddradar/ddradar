{
  "bindings": [
    {
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "authLevel": "anonymous",
      "methods": ["get"],
      "route": "v1/users/{id:regex(^[-a-zA-Z0-9_]+$)}/clear"
    },
    {
      "name": "users",
      "type": "cosmosDB",
      "direction": "in",
      "databaseName": "DDRadar",
      "collectionName": "Users",
      "sqlQuery": "SELECT c.id, c.isPublic FROM c WHERE c.id = {id}",
      "connectionStringSetting": "COSMOS_DB_CONN"
    },
    {
      "name": "clearStatuses",
      "type": "cosmosDB",
      "direction": "in",
      "databaseName": "DDRadar",
      "collectionName": "UserDetails",
      "sqlQuery": "SELECT c.playStyle, c.level, c.clearLamp, c.count FROM c WHERE c.userId = {id} AND c.type = 'clear'",
      "connectionStringSetting": "COSMOS_DB_CONN"
    },
    {
      "name": "totalCounts",
      "type": "cosmosDB",
      "direction": "in",
      "databaseName": "DDRadar",
      "collectionName": "UserDetails",
      "sqlQuery": "SELECT c.playStyle, c.level, c.count FROM c WHERE c.userId = '0'",
      "connectionStringSetting": "COSMOS_DB_CONN_READONLY"
    },
    {
      "type": "http",
      "direction": "out",
      "name": "$return"
    }
  ],
  "scriptFile": "../dist/users__id__clear/index.js"
}
