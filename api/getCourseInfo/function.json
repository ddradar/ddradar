{
  "bindings": [
    {
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "authLevel": "anonymous",
      "methods": ["get"],
      "route": "v1/courses/{id:regex(^[01689bdiloqDIOPQ]{{32}}$)}"
    },
    {
      "name": "documents",
      "type": "cosmosDB",
      "direction": "in",
      "databaseName": "DDRadar",
      "collectionName": "Songs",
      "sqlQuery": "SELECT c.id, c.name, c.nameKana, c.nameIndex, c.series, c.minBPM, c.maxBPM, c.charts FROM c WHERE c.id = {id} AND (c.nameIndex = -1 OR c.nameIndex = -2)",
      "connectionStringSetting": "COSMOS_DB_CONN"
    },
    {
      "type": "http",
      "direction": "out",
      "name": "$return"
    }
  ],
  "scriptFile": "../dist/getCourseInfo/index.js"
}
