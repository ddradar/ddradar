{
  "bindings": [
    {
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "authLevel": "anonymous",
      "methods": ["post"],
      "route": "v1/scores/{songId:regex(^([01689bdiloqDIOPQ]{{32}}|\\d{{1,3}})$)}"
    },
    {
      "name": "songs",
      "type": "cosmosDB",
      "direction": "in",
      "databaseName": "DDRadar",
      "collectionName": "Songs",
      "sqlQuery": "SELECT c.id, c.name, (c.nameIndex = -1 OR c.nameIndex = -2) AS isCourse, c.deleted, c.charts FROM c WHERE c.id = {songId} OR c.skillAttackId = StringToNumber({songId})",
      "connectionStringSetting": "COSMOS_DB_CONN_READONLY"
    },
    {
      "type": "http",
      "direction": "out",
      "name": "httpResponse"
    },
    {
      "type": "cosmosDB",
      "direction": "out",
      "name": "documents",
      "databaseName": "DDRadar",
      "collectionName": "Scores",
      "connectionStringSetting": "COSMOS_DB_CONN"
    }
  ],
  "scriptFile": "../dist/scores__id--post/index.js"
}
