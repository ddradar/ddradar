{
  "bindings": [
    {
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "authLevel": "anonymous",
      "methods": ["post"],
      "route": "v1/scores/{id:regex(^([01689bdiloqDIOPQ]{{32}}|\\d{{1,3}})$)}"
    },
    {
      "name": "songs",
      "type": "cosmosDB",
      "direction": "in",
      "databaseName": "DDRadar",
      "collectionName": "Songs",
      "sqlQuery": "SELECT c.id, c.name, c.deleted, c.charts FROM c WHERE c.id = {id} OR c.skillAttackId = StringToNumber({id})",
      "connectionStringSetting": "COSMOS_DB_CONN_READONLY"
    },
    {
      "type": "http",
      "direction": "out",
      "name": "httpResponse"
    },
    {
      "type": "cosmosDB",
      "direction": "out",
      "name": "documents",
      "databaseName": "DDRadar",
      "collectionName": "Scores",
      "connectionStringSetting": "COSMOS_DB_CONN"
    }
  ],
  "scriptFile": "../dist/scores__id--post/index.js"
}
