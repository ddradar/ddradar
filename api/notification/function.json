{
  "bindings": [
    {
      "name": "req",
      "type": "httpTrigger",
      "direction": "in",
      "authLevel": "anonymous",
      "methods": ["get"],
      "route": "v1/notification"
    },
    {
      "name": "documents",
      "type": "cosmosDB",
      "direction": "in",
      "databaseName": "DDRadar",
      "collectionName": "Notification",
      "sqlQuery": "SELECT c.id, c.type, c.icon, c.title, c.body, c.timeStamp FROM c WHERE ({Query.scope} != 'top') OR c.pinned ORDER BY c.pinned DESC, c.timeStamp DESC",
      "connectionStringSetting": "COSMOS_DB_CONN"
    },
    {
      "name": "$return",
      "type": "http",
      "direction": "out"
    }
  ],
  "scriptFile": "../dist/notification/index.js"
}
