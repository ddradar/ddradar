{
  "bindings": [
    {
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "authLevel": "anonymous",
      "methods": ["delete"],
      "route": "v1/scores/{id:regex(^[01689bdiloqDIOPQ]{{32}}$)}/{style:int:range(1,2)}/{diff:int:range(0,4)}"
    },
    {
      "name": "scores",
      "type": "cosmosDB",
      "direction": "in",
      "databaseName": "DDRadar",
      "collectionName": "Scores",
      "sqlQuery": "SELECT * FROM c WHERE c.songId = {id} AND c.playStyle = StringToNumber({style}) AND c.difficulty = StringToNumber({diff})",
      "connectionStringSetting": "COSMOS_DB_CONN"
    },
    {
      "type": "http",
      "direction": "out",
      "name": "httpResponse"
    },
    {
      "type": "cosmosDB",
      "direction": "out",
      "name": "documents",
      "databaseName": "DDRadar",
      "collectionName": "Scores",
      "connectionStringSetting": "COSMOS_DB_CONN"
    }
  ],
  "scriptFile": "../dist/scores__id__style__diff--delete/index.js"
}
