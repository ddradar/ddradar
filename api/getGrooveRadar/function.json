{
  "bindings": [
    {
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "authLevel": "anonymous",
      "methods": ["get"],
      "route": "v1/users/{id:regex(^[-a-z0-9_]+$)}/radar/{playStyle:int?}"
    },
    {
      "name": "users",
      "type": "cosmosDB",
      "direction": "in",
      "databaseName": "DDRadar",
      "collectionName": "Users",
      "sqlQuery": "SELECT c.id, c.isPublic FROM c WHERE c.id = {id}",
      "connectionStringSetting": "COSMOS_DB_CONN"
    },
    {
      "name": "radars",
      "type": "cosmosDB",
      "direction": "in",
      "databaseName": "DDRadar",
      "collectionName": "UserDetails",
      "sqlQuery": "SELECT c.playStyle, c.stream, c.voltage, c.air, c.freeze, c.chaos FROM c WHERE c.userId = {id} AND c.type = 'radar'",
      "connectionStringSetting": "COSMOS_DB_CONN"
    },
    {
      "type": "http",
      "direction": "out",
      "name": "$return"
    }
  ],
  "scriptFile": "../dist/getGrooveRadar/index.js"
}
